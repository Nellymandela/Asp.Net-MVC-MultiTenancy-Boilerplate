@using App.Core.Models.Entities;
@using App.Web.Models.UI.Admin;
@using App.Core.Models.Inputs;
@using App.Core.Models;
@model RoleViewModel
@{
    ViewBag.PageTitle = "Edit Role";

    var breadcrumb = new List<BreadCrumbViewModel>()
{
        new BreadCrumbViewModel()
        {
            Name = "Account", IsActive = false
        },

        new BreadCrumbViewModel()
        {
            Name = "Roles", IsActive = true, Url = Url.Action("Index", "Role", new { area = "Admin" })
        },

        new BreadCrumbViewModel()
        {
            Name = "Edit Role"
        }
    };
}
@Html.Partial("~/Areas/Admin/Views/Partial/Role/_CreateRoleModal.cshtml", new RoleViewModel())

    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Subheader-->
            <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
                <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                    <!--begin::Info-->
                    <div class="d-flex align-items-center flex-wrap mr-1">

                        <!--begin::Page Heading-->
                        <div class="d-flex align-items-baseline flex-wrap mr-5">
                            @Html.Partial("~/Areas/Admin/Views/Partial/_BreadCrumb.cshtml", breadcrumb)
                        </div>
                    </div>
                    <!--end::Info-->
                </div>
            </div>
                <!--begin::Container-->
                <div class=" container ">
                    @Html.Partial("~/Areas/Admin/Views/Partial/_Notification.cshtml")

                    @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { areas = "Admin" }))
                    {
                        <div class="card card-custom">
                            <div class="card-header card-header-tabs-line">
                                <div class="card-title">
                                    <h3 class="card-label">@ViewBag.PageTitle</h3>
                                </div>
                                <div class="card-toolbar">
                                    <ul class="nav nav-tabs nav-bold nav-tabs-line">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-toggle="tab" href="#kt_tab_pane_1_2">Edit Information</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link pulse pulse-primary" data-toggle="tab" href="#kt_tab_pane_2_2">Assigned Permission</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="kt_tab_pane_1_2" role="tabpanel">
                                        <div class="form-group">
                                            <label>Name<span class="text-danger">*</span></label>
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter role name", required = "required", type = "text" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                        @if (false)
                                        {
                                            <div class="form-group">
                                                <label>Color<span class="text-danger">*</span></label>
                                                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", required = "required", type = "color" } })
                                                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                                <span class="form-text text-muted">This color identifies this role within the system.</span>
                                            </div>
                                        }
                                        <div class="form-group">
                                            <div class="checkbox-inline">
                                                <label class="checkbox">
                                                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { } })
                                                    <span></span>
                                                    Activate role
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="kt_tab_pane_2_2" role="tabpanel">
                                        @Html.Partial("~/Areas/Admin/Views/Partial/Role/_RolePermissionSetup.cshtml", (List<MenuViewModel>)ViewBag.menu)
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-block btn-ladda ladda-button" data-style="zoom-out">Update</button>
                            </div>
                        </div>
                    }
                </div>
                <!--end::Container-->
            <!--end::Entry-->
        </div>
<br />
@section page_css{
    @Styles.Render("~/assets/ladda/css")
    @Styles.Render("~/assets/jstree/css")
}

@section page_js{
    @Scripts.Render("~/assets/ladda/js")
    @Scripts.Render("~/assets/jstree/js")

    <script>
        $(document).ready(function () {
            Ladda.bind('.ladda-button');
        });
    </script>
}
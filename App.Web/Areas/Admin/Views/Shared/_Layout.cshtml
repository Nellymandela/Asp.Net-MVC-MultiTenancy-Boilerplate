@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@using Microsoft.Owin.Security;
@using System.Security.Claims;
@using App.Core.Security;
@using App.Core.Common;
@{
    ViewBag.name = User.Identity.GetUserName();
    ViewBag.tenantName = ApplicationClaimTypes.GetClaimValue(User.Identity, ApplicationClaimTypes.TenancyName);
    ViewBag.tenantCode = ApplicationClaimTypes.GetClaimValue(User.Identity, ApplicationClaimTypes.TenancyCode);
    ViewBag.email = ApplicationClaimTypes.GetClaimValue(User.Identity, ClaimTypes.Email);
    ViewBag.username = ApplicationClaimTypes.GetClaimValue(User.Identity, ClaimTypes.GivenName);
    ViewBag.tenantLogo = ApplicationClaimTypes.GetClaimValue(User.Identity, ApplicationClaimTypes.TenancyLogo);
}


<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
    <base href="../../">
    <meta charset="utf-8" />
    <title>@ViewBag.tenantCode | @ViewBag.PageTitle</title>
    <meta name="description" content="Page with empty content" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    @RenderSection("page_css")
    @Styles.Render("~/assets/metronic/css")
    <link rel="shortcut icon" href="assets/media/logos/favicon.ico" />

</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed subheader-mobile-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading footer-fixed">

    <form id="logoutForm" hidden="hidden" action="@($"/Account/Logout?T={ViewBag.tenantCode}")" method="post">@Html.AntiForgeryToken()</form>
    <!--begin::Main-->
    <!--begin::Header Mobile-->
    <div id="kt_header_mobile" class="header-mobile align-items-center  header-mobile-fixed ">
        <!--begin::Logo-->
        <a href="index.html">
            <img alt="Logo" src="assets/media/logos/logo-light.png" />
        </a>
        <!--end::Logo-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
            <!--begin::Aside Mobile Toggle-->
            <button class="btn p-0 burger-icon burger-icon-left" id="kt_aside_mobile_toggle">
                <span></span>
            </button>
            <!--end::Aside Mobile Toggle-->
            <!--begin::Header Menu Mobile Toggle-->
            <button class="btn p-0 burger-icon ml-4" id="kt_header_mobile_toggle">
                <span></span>
            </button>
            <!--end::Header Menu Mobile Toggle-->
